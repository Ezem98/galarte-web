---
import Logo from "./Logo.astro";
import "@fontsource-variable/jetbrains-mono";
---

<header
  class="border-b-2 border-black w-full flex justify-between items-center box-border p-4 z-10"
>
  <section class="flex w-1/3">
    <Logo>
      <h1>My Blog</h1>
    </Logo>
  </section>
  <nav class="flex box-border pr-8 gap-2 w-1/3 justify-center">
    <a href="/artists">artistas</a>
    <a href="/shop">tienda</a>
    <a href="/about-us">qui√©nes somos</a>
  </nav>
  <section class="flex gap-4 w-1/3 justify-end">
    <img
      src="/icons/search.png"
      alt="search icon"
      class="w-7 h-7 transform: scale-x-[-1]"
    />
    <img src="/icons/shopping_bag.png" alt="search icon" class="w-7 h-7" />
  </section>
</header>

<style>
  header {
    background-color: #f6f6f6;
    border-bottom: 1px solid #13151a;
  }

  nav a {
    font-family: "JetBrains Mono", monospace;
    color: #13151a;
    text-decoration: none;
    margin-left: 1rem;
    font-size: 18px;
    text-transform: uppercase;
  }

  nav a:hover {
    text-decoration: underline;
    transition: 0.5s ease-in-out all;
  }

  img:hover {
    cursor: pointer;
  }
</style>
