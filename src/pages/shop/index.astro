---
import { ITEMS } from "@const/items";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Galarte Web">
  <main
    class="bg-light h-full overflow-y-auto flex flex-col justify-between items-center"
  >
    <header class="border border-t-0 border-primary flex w-full">
      <h3 class="uppercase font-medium text-center flex grow justify-end">
        categorias
      </h3>
      <input
        type="text"
        placeholder="Buscar"
        class="font-medium w-1/6 border-l border-primary box-border mx-4 placeholder:uppercase bg-transparent pl-4 focus:outline-none"
      />
    </header>
    <div class="w-full grid grid-cols-4 gap-12 py-6 px-12">
      {
        ITEMS.slice(0, 8).map((item) => {
          return (
            <article class="h-[320px] justify-between">
              <section class="flex justify-between items-start border border-primary p-4">
                <small class="text-center">
                  {item.id < 10
                    ? `00${item.id}`
                    : item.id < 100
                      ? `0${item.id}`
                      : `${item.id}`}
                </small>
                <img
                  src="/images/panel_central_1.webp"
                  alt="artist"
                  class="h-72 w-64"
                  style={`view-transition-name: item-${item.id}`}
                />
                <button class="uppercase flex border border-primary justify-center items-center px-4 hover: transform: translate-x-1">
                  +
                </button>
              </section>
              <section class="flex justify-between">
                <h4 class="uppercase text-lg font-medium">{item.name}</h4>
                <a
                  href={`/shop/${item.id}`}
                  class="uppercase flex border border-t-0 border-primary text-xs justify-center items-center px-4"
                >
                  Ver más
                </a>
              </section>
            </article>
          );
        })
      }
    </div>
    <button
      id="load-more"
      class="uppercase flex border w-fit h-fit border-primary text-md justify-center items-center px-4 m-4"
    >
      Cargar más obras</button
    >
  </main>
</Layout>
